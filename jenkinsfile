pipeline { 
    environment {
        revhire-job-service= '471112742532.dkr.ecr.us-east-1.amazonaws.com/revhire-job-service-repo:latest'
    }
    agent any 
    stages {
        stage('checkout') {
            steps {
                git branch: 'main',
                url: 'https://github.com/Abinashkhuntia/revhire-project-2.git'
            }
        }
        
        stage('Building the User Service image') {
            steps {
                dependencies {
                    build('Building the Infrastructure')
                }
                script {
                    echo "Building the User Service"
                    sh "docker build -t ${revhire-job-service} ."
                    sh "aws ecr get-login-password --region us-east-1 | docker login --username AWS --password-stdin 471112742532.dkr.ecr.us-east-1.amazonaws.com"
                    sh "docker push ${revhire-job-service}"
                }
            }
        }

        stage('Deploying the Job Service') {
            steps {
                script {
                    echo "Deploying the User Service"
                    sh "kubectl apply -f /manifests/deployment.yaml"
                }
            }
        }

       
    } 
}